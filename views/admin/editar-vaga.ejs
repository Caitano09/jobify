<%- include('header') %>

<h2>
    Editar Vaga:
    <a href="/admin/vagas">Vagas</a>
</h2>

<div>
<form action="" method="post">

    <label for="titulo">Título:</label>
    <input name="titulo" id="titulo" type="text" value="<%- vaga.titulo %>"><br>

    <label for="descricao">Descrição:</label>
    <textarea name="descricao" id="decricao" cols="30" rows="10"><%- vaga.descricao %></textarea><br>
    
    <label for="categoria">Categoria:</label>
    <select name="categoria" id="categoria">

        <% categorias.forEach(categoria =>{ %>
            <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoriaId){ %> selected <% } %> > <%- categoria.categoria %></option>
        <% }) %>
    </select><br>

    <button type="submit">Salvar vaga</button>
</form>
</div>

<%- include('footer') %>